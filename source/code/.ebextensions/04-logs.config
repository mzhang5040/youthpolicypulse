option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: false
    DeleteOnTerminate: false
    RetentionInDays: 7
  aws:elasticbeanstalk:cloudwatch:logs:health:
    HealthStreamingEnabled: false
    DeleteOnTerminate: false
    RetentionInDays: 7

files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/congress-tracker.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/eb-docker/containers/eb-current-app/*.log
